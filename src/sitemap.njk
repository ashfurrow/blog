---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
layout: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {# Homepage #}
  <url>
    <loc>{{ metadata.url }}/</loc>
    <lastmod>{{ (collections.posts | reverse)[0].date | xmlDate }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  {# Main pages #}
  <url>
    <loc>{{ metadata.url }}/blog/</loc>
    <lastmod>{{ (collections.posts | reverse)[0].date | xmlDate }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ metadata.url }}/about/</loc>
    <lastmod>{{ (collections.posts | reverse)[0].date | xmlDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <url>
    <loc>{{ metadata.url }}/books/</loc>
    <lastmod>{{ (collections.posts | reverse)[0].date | xmlDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  
  <url>
    <loc>{{ metadata.url }}/portfolio/</loc>
    <lastmod>{{ (collections.posts | reverse)[0].date | xmlDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  
  <url>
    <loc>{{ metadata.url }}/speaking/</loc>
    <lastmod>{{ (collections.posts | reverse)[0].date | xmlDate }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  
  <url>
    <loc>{{ metadata.url }}/search/</loc>
    <lastmod>{{ (collections.posts | reverse)[0].date | xmlDate }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.5</priority>
  </url>
  
  {# Blog posts #}
  {%- for post in collections.posts | reverse %}
  <url>
    <loc>{{ post.url | absoluteUrl(metadata.url) }}</loc>
    <lastmod>{{ post.date | xmlDate }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.6</priority>
  </url>
  {%- endfor %}
</urlset>