{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "strict": true,
    "noEmit": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "baseUrl": "src"
  },
  "include": [
    "./src/**/*",
    "./bootup/**/*",
    "./scripts/**/*",
    "./blog/**/*"
  ]
}